<local:TemplateControl x:Class="Norne_Beta.UIElements.HorizontalTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Norne_Beta.UIElements"
             mc:Ignorable="d" d:DesignWidth="510.268" d:DesignHeight="212.262" MinHeight="212" PreviewMouseLeftButtonDown="TemplateControl_PreviewMouseLeftButtonDown">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Edit" Click="MenuItemEdit_Click"/>
            <MenuItem Header="Paste" Click="MenuItemPaste_Click"/>
            <MenuItem Header="Delete" Click="MenuItemDelete_Click"/>
            <MenuItem Header="Load" Click="MenuItemLoad_Click"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid x:Name="MainGrid">
        <DockPanel x:Name="MainPanel" Background="#FF313859" Drop="DockPanel_Drop" LastChildFill="False" Margin="0,21,90,0"/>
        <DockPanel x:Name="ControlPanel" Margin="0,21,0,0" Background="#FF0A7038" HorizontalAlignment="Right" Width="90" Drop="ControlPanel_Drop">
        </DockPanel>
        <DockPanel x:Name="PresetPanel" Height="21" LastChildFill="False" VerticalAlignment="Top" Background="#FF491E1E"/>

    </Grid>
</local:TemplateControl>
