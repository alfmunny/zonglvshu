<local:ElementControl x:Class="Norne_Beta.UIElements.MultiTextPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Norne_Beta.UIElements"
             mc:Ignorable="d" d:DesignWidth="300" Height="50">
    <Grid>
        <DockPanel>
            <Label x:Name="Label" Content="Label" VerticalAlignment="Top" Height="21" VerticalContentAlignment="Center" Padding="5,2,5,4" Background="#FFDA8989" PreviewMouseLeftButtonDown="Label_PreviewMouseLeftButtonDown">
            </Label>
            <TextBox x:Name="TextBox" TextWrapping="WrapWithOverflow" AcceptsReturn="True" TextChanged="TextBox_TextChanged"/>
        </DockPanel>
    </Grid>
</local:ElementControl>
