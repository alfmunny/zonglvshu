<UserControl x:Class="Norne_Beta.UIElements.ProjectWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Norne_Beta.UIElements"
             mc:Ignorable="d" d:DesignWidth="612" d:DesignHeight="464">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Main">
                <Grid Background="#FFC5C5C5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel LastChildFill="False" Margin="10" Background="#FF8F7474" AllowDrop="True" Drop="DockPanel_Drop"/>
                    <DockPanel LastChildFill="False" Margin="10" Background="#FF8F7474" AllowDrop="True" Grid.Column="1" Drop="DockPanel_Drop"/>
                </Grid>
            </TabItem>
            <TabItem Header="Debug">
                <Grid Background="#FFC5C5C5">
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
